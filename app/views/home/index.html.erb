<h1>Search your Movies</h1>

<%= form_tag root_path, method: :get, :class => "form-search" do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], :"data-provide" => "typeahead", :class => "typeahead span11 search-query", :autocomplete => :off %>
    <%= button_tag "Search", name: nil, :class => "btn" %>
  </div>
<% end %>

<table id="movies" class="table table-hover">
  <thead>
    <tr>
      <th>Poster</th>
      <!--<th>#</th>-->
      <th>Title</th>
    </tr>
  </thead>
  <tbody>
  <%= render @movies %>
  </tbody>
</table>
